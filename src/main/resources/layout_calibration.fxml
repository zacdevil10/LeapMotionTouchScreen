<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.Group?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<AnchorPane fx:id="container" onKeyPressed="#calibrationConfirm" prefHeight="720.0" prefWidth="1280.0" xmlns:fx="http://javafx.com/fxml" fx:controller="uk.co.zac_h.ui.controller.CalibrationLayoutController">

    <StackPane AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" AnchorPane.topAnchor="0">

        <ImageView fx:id="imageLeftPoint" fitHeight="38.0" fitWidth="38.0" onMouseClicked="#targetClicked" pickOnBounds="true" preserveRatio="true" StackPane.alignment="TOP_LEFT">

            <Image url="@images/calibration_target_selected.png" />

        </ImageView>

        <ImageView fx:id="imageRightPoint" fitHeight="38.0" fitWidth="38.0" onMouseClicked="#targetClicked" opacity="0.5" pickOnBounds="true" preserveRatio="true" rotate="90.0" StackPane.alignment="TOP_RIGHT">

            <Image url="@images/calibration_target.png" />

        </ImageView>

        <ImageView fx:id="imageBottomPoint" fitHeight="38.0" fitWidth="75.0" onMouseClicked="#targetClicked" opacity="0.5" pickOnBounds="true" preserveRatio="true" StackPane.alignment="BOTTOM_CENTER">

            <Image url="@images/calibration_target_lower.png" />

        </ImageView>

        <Group StackPane.alignment="CENTER">
            <StackPane prefHeight="189.0" prefWidth="588.0">

                <Label contentDisplay="TOP" text="Calibration" textFill="#424242" StackPane.alignment="TOP_CENTER">

                    <font>
                        <Font size="34.0" />
                    </font>

                </Label>

                <Label alignment="CENTER" contentDisplay="CENTER" prefHeight="125.0" prefWidth="601.0" text="Place a finger on the orange target and press [ENTER] &#13; Repeat for all targets &#13; Press [R] to reset and [ESC] to cancel" textAlignment="CENTER" textFill="#424242" StackPane.alignment="BOTTOM_CENTER">

                    <font>
                        <Font size="24.0" />
                    </font>

                </Label>

            </StackPane>

        </Group>

    </StackPane>

</AnchorPane>
